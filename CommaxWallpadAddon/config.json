{
  "name": "COMMAX Wallpad Addon by ew11-mqtt",
  "version": "1.5.3m",
  "slug": "commax",
  "url": "https://github.com/wooooooooooook/HAaddons",
  "description": "mqtt 통신을 활용한 코맥스 월패드 컨트롤러",
  "arch": ["armhf", "armv7", "aarch64", "amd64", "i386"],
  "map": [
    "share:rw"
  ],
  "startup": "application",
  "boot": "auto",
  "init": false,
  "options": {
    "vendor": "commax",
    "queue_interval_in_second": "0.1",
    "max_send_count" : 15,
    "DEBUG": false, 
    "mqtt_log": false,
    "elfin_log": false,
    "mqtt_server": "192.168.x.x",
    "mqtt_id": "id",
    "mqtt_password": "password",
    "mqtt_TOPIC": "commax",
    "elfin_auto_reboot": true,
    "elfin_server": "192.168.x.x",
    "elfin_id": "admin",
    "elfin_password": "elfin_password",
    "elfin_reboot_interval": 60
  },
  "schema": {
    "vendor": "list(commax|custom)",
    "queue_interval_in_second": "float",    
    "max_send_count" : "int",
    "DEBUG": "bool",
    "mqtt_log": "bool",
    "elfin_log": "bool",
    "mqtt_server": "str",
    "mqtt_id": "str",
    "mqtt_password": "str",
    "mqtt_TOPIC": "str",
    "elfin_auto_reboot": "bool",
    "elfin_server": "str?",
    "elfin_id": "str?",
    "elfin_password": "str?",
    "elfin_reboot_interval": "int"
  },
  "ingress": true,
  "ingress_port": 8099,
  "ports": {
    "8099/tcp": null
  }
}